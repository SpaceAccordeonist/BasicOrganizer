<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:background="@color/colorAuthBackground"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="20dp">
    <EditText
        android:id="@+id/edit_text_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/ed_hint_email"
        android:hint="@string/ed_hint_email"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/edit_text_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:autofillHints="@string/ed_hint_password"
        android:hint="@string/ed_hint_password"
        android:inputType="textPassword" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_signin"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/button_signin" />

        <Button
            android:id="@+id/button_register"
            style="@style/Button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="@string/button_register" />
    </LinearLayout>
</LinearLayout>